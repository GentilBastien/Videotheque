<UserControl x:Class="MaVideotheque.Components.StockState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaVideotheque.Components"
             mc:Ignorable="d" >
    <Border CornerRadius="8" Background="{Binding Couleur}" Height="22" Width="{Binding Largeur}">
        <Label Content="{Binding Texte}" Foreground="White" FontFamily="Calibri"  />
    </Border>
</UserControl>
